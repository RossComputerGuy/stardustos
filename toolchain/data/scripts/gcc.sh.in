#!/usr/bin/env bash

set -e

mkdir -p @PROJECT_BINARY_DIR@/build-gcc
cd @PROJECT_BINARY_DIR@/build-gcc
@PROJECT_SOURCE_DIR@/gcc/configure --target=@CROSS_COMPILE@ --prefix=@PROJECT_BINARY_DIR@/crossroot \
	--disable-nls --enable-languages=c,c++ --enable-plugins --with-mpfr --with-mpc
make
make install
