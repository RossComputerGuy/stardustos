#!/usr/bin/env bash

mkdir -p @PROJECT_BINARY_DIR@/build-binutils
cd @PROJECT_BINARY_DIR@/build-binutils
@PROJECT_SOURCE_DIR@/binutils/configure --target=@CROSS_COMPILE@ --prefix=@PROJECT_BINARY_DIR@/crossroot \
	--disable-nls --disable-werror --disable-gdb --disable-libdecnumber --disable-readline --disable-sim
make
make install
